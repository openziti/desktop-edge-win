<UserControl x:Class="ZitiDesktopEdge.ZdewLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZitiDesktopEdge"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBlock FontSize="14" TextWrapping="Wrap" TextAlignment="Center" Padding="0,30,0,0" Foreground="#638190" Margin="0,-20,0,0" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans">
        <Hyperlink x:Name="Link"
                   NavigateUri="https://github.com/openziti/desktop-edge-win/tree/main/Installer/openssl/README.md"
                   RequestNavigate="Hyperlink_RequestNavigate">
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Hyperlink>
    </TextBlock>
</UserControl>
