<UserControl x:Class="ZitiDesktopEdge.IdentityDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:ZitiDesktopEdge"
             mc:Ignorable="d"
             MaxWidth="{StaticResource MaxWindowWidth}"
             x:Name="IdentityArea"
             d:DesignHeight="500" d:DesignWidth="450" IsVisibleChanged="VisibilityChanged">
    <UserControl.Resources>
        <Thickness x:Key="LeftMargin" Left="30" Top="0" Right="0" Bottom="0"/>
        <Thickness x:Key="RightMargin" Left="0" Top="0" Right="30" Bottom="0"/>
        <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Open Sans"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="RowTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Open Sans"/>
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <FontFamily x:Key="DetailFont">pack://application:,,,/Assets/Fonts/#Open Sans</FontFamily>
        <sys:Double x:Key="DetailFontSize">12</sys:Double>
        
        <SolidColorBrush x:Key="DetailForeground" Color="Black"/>

        <!-- Label style -->
        <Style x:Key="DetailRowLabel" TargetType="Label">
            <Setter Property="Padding" Value="5,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="{StaticResource DetailFontSize}"/>
            <Setter Property="FontFamily" Value="{StaticResource DetailFont}"/>
            <Setter Property="Foreground" Value="{StaticResource DetailForeground}"/>
        </Style>

        <!-- TextBox style -->
        <Style x:Key="DetailRowTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Padding" Value="15,0,0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="{StaticResource DetailFontSize}"/>
            <Setter Property="FontFamily" Value="{StaticResource DetailFont}"/>
            <Setter Property="Foreground" Value="{StaticResource DetailForeground}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Border Arrow pointing to TaskBar -->
        <Canvas>
            <Rectangle Name="Arrow" HorizontalAlignment="Center" Height="20" Fill="White" Width="20" ClipToBounds="True">
                <Rectangle.LayoutTransform>
                    <RotateTransform Angle="-45"/>
                </Rectangle.LayoutTransform>
            </Rectangle>
        </Canvas>

        <!-- Background Color for Pop Overs -->
        <Rectangle x:Name="MainCanvas" Margin="10,10,10,10" Fill="White" RadiusY="10" RadiusX="10"></Rectangle>

        <Grid Margin="0,30,0,0" d:Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <!-- Content before -->
                <RowDefinition Height="*" />
                <!-- Space for the StackPanel -->
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,0,0,0">
                <!-- Header Controls -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="{StaticResource LeftMargin}"
                                Orientation="Horizontal">
                        <Image Name="IsConnectedAndDetails" Height="25"
                               Visibility="Collapsed"
                               d:Visibility="Visible"
                               ToolTip="Identity connected. Click to see service details."
                               Source="/Assets/Images/online.png"
                               HorizontalAlignment="Left"
                        />
                        <Image Name="MFAStatusAndDetails" Height="25" Cursor="Hand"
                               Margin="5,0,0,0"
                               Visibility="Collapsed"
                               d:Visibility="Visible"
                               Source="/Assets/Images/mfaoff.png"
                        />
                        <Image Name="ExternalProviderStatusAndDetails" Height="25" Cursor="Hand"
                               Margin="5,0,0,0"
                               Visibility="Visible"
                               d:Visibility="Visible"
                               Source="/Assets/Images/ext-auth-ok.png"
                               HorizontalAlignment="Left"
                               ToolTip="Click to configure external auth providers"
                               MouseUp="ExternalProviderSettingsIcon_MouseUp"
                        />
                    </StackPanel>
                    <Label x:Name="IdDetailName"
                               MouseDown="Window_MouseDown"
                               MouseUp="HandleAttach"
                               Content="Identity Details"
                               Grid.Column="1"
                               Cursor="ScrollAll"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#0F0F23"
                               VerticalAlignment="Center"
                    />
                    <Image Grid.Column="2"
                           Cursor="Hand"
                           Source="/Assets/Images/x.png"
                           Width="20" Height="20"
                           Margin="{StaticResource RightMargin}"
                           HorizontalAlignment="Right"
                           MouseUp="HideMenu"
                    />
                </Grid>
                <Rectangle Margin="20,0,20,10" Fill="#070826" Height="1" RadiusY="10" RadiusX="10" Opacity="0.1"></Rectangle>
                <local:MenuEditItem Margin="20,0,20,5" x:Name="IdName" Label="Name" IsLocked="True" />
                <Rectangle Margin="20,0,20,10" Fill="#070826" Height="1" RadiusY="10" RadiusX="10" Opacity="0.1"></Rectangle>
                <local:MenuEditItem x:Name="IdServer" Margin="20,0,20,5" Label="Network" IsLocked="True" />
                <Rectangle Margin="20,0,20,5" Fill="#070826" Height="1" RadiusY="10" RadiusX="10" Opacity="0.1"></Rectangle>
                <local:MenuEditToggle x:Name="IdentityMFA" HorizontalAlignment="Stretch" Label="Multi Factor Auth" PreviewMouseDown="IdentityMFA_PreviewMouseDown" PreviewMouseUp="IdentityMFA_PreviewMouseUp"
                                      Margin="20,0,20,5" Recovery="MFARecovery" Authenticate="MFAAuthenticate"
                                      Toggle="ToggleMFA"></local:MenuEditToggle>
                <local:Filter x:Name="FilterServices" OnFilter="DoFilter" VerticalAlignment="Top" Margin="10,5,10,0" />
                <StackPanel Name="ServicesPanel" d:Visibility="Collapsed">
                    <Grid Name="MainDetailScroll" MaxHeight="160" Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95*"/>
                            <ColumnDefinition Width="34*"/>
                            <ColumnDefinition Width="61*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Margin="10,10,10,10" Fill="#070826" RadiusY="10" RadiusX="10" Grid.ColumnSpan="3"></Rectangle>
                        <ListView x:Name="ServiceList" VirtualizingPanel.IsVirtualizing="True"
                                  ScrollViewer.IsDeferredScrollingEnabled="True"
                                  ScrollViewer.ScrollChanged="Scrolled"
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                  Focusable="False" IsManipulationEnabled="False"
                                  BorderThickness="0" Background="Transparent"
                                  Margin="15,15,15,15"
                                  Style="{DynamicResource ServiceListStyle}" Grid.ColumnSpan="3">
                            <ListView.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBar2026}"/>
                            </ListView.Resources>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <Border x:Name="ItemBorder" Background="{TemplateBinding Background}">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#33FFFFFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="32">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="225"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition x:Name="TimerColumn" Width="20" />
                                            <ColumnDefinition x:Name="WarningColumn" Width="20" />
                                            <ColumnDefinition x:Name="DetailColumn" Width="20" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Vertical" Height="30" Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Name="MainLabel" Style="{StaticResource HeaderTextBlock}"
                                                       Text="{Binding Name}"
                                            />
                                            <TextBlock Name="MainEdit" Style="{StaticResource RowTextBlock}"
                                                       Text="{Binding AddressString}"
                                            />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
                                            <TextBlock x:Name="BindText" Style="{StaticResource HeaderTextBlock}" TextAlignment="Center"
                                                       Text="{Binding BindString}" Height="Auto"
                                                       Visibility="{Binding BindString, Converter={StaticResource NullToCollapsed}}"
                                            />
                                            <TextBlock x:Name="DialText" Style="{StaticResource HeaderTextBlock}" TextAlignment="Center"
                                                       Text="{Binding DialString}" Height="Auto"
                                                       Visibility="{Binding DialString, Converter={StaticResource NullToCollapsed}}"
                                            />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Name="Protocols" Text="{Binding ProtocolString}" Padding="0,0,12,0"
                                                       Height="15" FontWeight="Bold" Background="Transparent" ClipToBounds="True"
                                                       VerticalAlignment="Bottom" HorizontalAlignment="Center"
                                                       FontSize="11" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"
                                                       Foreground="White" Opacity="0.9"></TextBlock>
                                            <TextBlock Name="Ports" Text="{Binding PortString}" Height="14" Padding="0,0,12,0"
                                                       HorizontalAlignment="Center" Background="Transparent" ClipToBounds="True"
                                                       Grid.Column="0" VerticalAlignment="Top" FontSize="10"
                                                       FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans" Foreground="LightGray"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <Image x:Name="TimerIcon" Visibility="{Binding TimerVisibility}"
                                                   Source="/Assets/Images/timer.png" Width="20" Height="20" Cursor="Hand" MouseUp="DoMFA"/>
                                            <Image x:Name="TimedOutIcon" Visibility="{Binding MfaVisibility}"
                                                   Source="/Assets/Images/mfaoff.png" Width="20" Height="20" Cursor="Hand" MouseUp="DoMFA"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="4" VerticalAlignment="Center">
                                            <Image x:Name="WarnIcon" Visibility="{Binding WarningVisibility}" ToolTip="{Binding WarningMessage}" Source="/Assets/Images/Warning.png" Width="20" Height="20" Cursor="Hand" MouseUp="WarnClicked"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="5" VerticalAlignment="Center">
                                            <Image x:Name="DetailIcon" Source="/Assets/Images/detail.png" Width="20" Height="20" Cursor="Hand" MouseUp="DetailsClicked"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <Label x:Name="ServiceCount" HorizontalAlignment="Center" Content="0 Services" Margin="0,0,0,0" Foreground="Gray" FontWeight="Bold" FontSize="12" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"></Label>
                </StackPanel>
                <StackPanel Name="ExternalProviderPanel" Visibility="Visible">
                    <Grid MaxHeight="160" Margin="10,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Label x:Name="ExternalProviderLabel" Grid.ColumnSpan="3" Width="Auto"
                           HorizontalAlignment="Center"
                           Content="You must authenticate to access services" 
                           FontWeight="Bold"
                           FontSize="12"
                           FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"
                     />

                    <Border Background="{StaticResource VeryLightBackgroundBrush}"
                            BorderBrush="Gray"
                            BorderThickness="2"
                            CornerRadius="5"
                            Width="300" Margin="0,5,0,0"
                    >
                        <StackPanel x:Name="ExternalProvider" Margin="0,0,0,10">
                            <Label Content="Configured Providers"
                                   Foreground="Black"
                                   FontSize="12"
                                   HorizontalAlignment="Left"
                                   FontWeight="Bold"
                                     Margin="20,0,20,0"
                                   />
                            <ListBox Name="ProviderList"
                                     SelectionMode="Single"
                                     Margin="20,0,20,0"
                                     MaxHeight="70"
                                     BorderThickness="3"
                                     BorderBrush="Black"
                                     Padding="0"
                                     FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"
                                     SelectionChanged="ProviderList_SelectionChanged"
                            >
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <!-- Default background -->
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True" >
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="Background" Value="#FF0000" />
                                                <Setter Property="FontWeight" Value="ExtraBlack" />
                                                <Setter Property="Background" Value="Orange" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False" >
                                                <Setter Property="Foreground" Value="Gray" />
                                                <Setter Property="Background" Value="White" />
                                                <Setter Property="BorderThickness" Value="0" />
                                            </Trigger>
                                        </Style.Triggers>
                                        <Style.Resources>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Green"/>
                                        </Style.Resources>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <d:ListBoxItem Content="Option 1" />
                                <d:ListBoxItem Content="Option 2" d:IsSelected="true" />
                                <d:ListBoxItem Content="Option 3" />
                                <d:ListBoxItem Content="Option 4" />
                            </ListBox>
                            <Grid HorizontalAlignment="Right">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Rectangle
                                    Grid.Column="0"
                                    Fill="Purple"
                                />
                                <Label
                                    Content="Default provider?"
                                    Margin="0,5,0,5"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    Grid.Column="1"
                                />
                                <CheckBox
                                    Name="IsDefaultProvider"
                                    Margin="0,5,20,5"
                                    Background="White"
                                    VerticalAlignment="Center"
                                    Grid.Column="2"
                                    Checked="IsDefaultProvider_Checked"
                                    Unchecked="IsDefaultProvider_Unchecked"
                                    PreviewMouseDown="IsDefaultProvider_PreviewMouseDown"
                                />
                            </Grid>
                            <local:StyledButton
                                x:Name="AuthenticateWithProvider"
                                Grid.Column="0"
                                Label="Authenticate With Provider"
                                IsTabStop="True"
                                ButtonMargin="10,0,10,0"
                                Margin="20,0,20,0"
                                MouseUp="AuthenticateWithExtAuthProvider"
                                VerticalAlignment="Center"
                                Visibility="Collapsed"
                            />
                        </StackPanel>
                    </Border>
                </StackPanel>
                <StackPanel Name="TOTPPanel" Visibility="Collapsed">
                    <TextBox Name="NoAuthServices" 
                             Grid.Column="0" Grid.Row="5"
                             Height="30" FontWeight="Bold"
                             Margin="10,0,10,0"
                             TextAlignment="Center"
                             Text="You must authenticate to access services" IsReadOnly="True"
                             HorizontalAlignment="Stretch"
                             BorderThickness="0" ClipToBounds="True"
                             VerticalAlignment="Center"
                             Padding="0,6,3,0" FontSize="12"                             
                             Foreground="Black"
                    />
                    <Grid>
                        <Rectangle x:Name="AuthMessageBg"
                                   Margin="40,0,40,0"
                                   Opacity="0.8"
                                   RadiusX="7" RadiusY="7"
                                   ClipToBounds="True"
                                   Height="30"
                                   VerticalAlignment="Bottom"
                                   Cursor="Hand"
                                   MouseUp="ExtAuthTOTP">
                            <Rectangle.Fill>
                                <SolidColorBrush x:Name="AuthBgColor" Color="#0069FF"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label x:Name="AuthMessageLabel"
                               HorizontalAlignment="Center"
                               Content="Authenticate"
                               IsHitTestVisible="False"
                               Foreground="#FFFFFF"></Label>
                    </Grid>
                </StackPanel>
            </StackPanel>
            <local:StyledButton x:Name="ForgetIdentityButton" Grid.Row="1"
                                MinWidth="310"
                                BgColor="#F4044D"
                                Label="Forget This Identity"
                                ButtonMargin="30,0,30,0"
                                Margin="0,10,0,20"
                                OnClick="ForgetIdentity"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
            />
        </Grid>
        <Rectangle x:Name="ModalBg" Margin="10,10,10,10" Fill="Black" RadiusY="10" RadiusX="10" Opacity="0" Visibility="Collapsed" MouseDown="Window_MouseDown"></Rectangle>

        <!-- Expended Detail Modal for Details pop up on service list -->
        <Grid x:Name="DetailsArea" Visibility="Collapsed" Height="450" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Margin="10,10,10,10" BorderBrush="Black" BorderThickness="8" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Direction="1" RenderingBias="Quality" ShadowDepth="1" Opacity="1"/>
                </Border.Effect>
            </Border>
            <Rectangle Margin="10,10,10,10" RadiusX="10" RadiusY="10" ClipToBounds="True">
                <Rectangle.Fill>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.97"/>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel x:Name="DetailPanel" Grid.Column="0" Orientation="Vertical" Margin="20,20,20,20" VerticalAlignment="Center" FocusVisualStyle="{x:Null}">
                <Label Content="Name" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailName" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Url" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailUrl" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Addresses" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailAddress" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Ports" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailPorts" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Protocols" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailProtocols" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Permissions" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="DetailsPermissions" Style="{StaticResource DetailRowTextBox}"/>

                <Label Content="Timeout" Style="{StaticResource DetailRowLabel}"/>
                <TextBox x:Name="TimeoutDetails" Style="{StaticResource DetailRowTextBox}"/>
            </StackPanel>
            <Image Source="/Assets/Images/closeBlack.png" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,40,40,0" Width="10" Height="10" Cursor="Hand" MouseUp="CloseDetails"></Image>
        </Grid>

        <!-- Confirmation Prompt for confirming deletion -->
        <Grid x:Name="ForgetIdentityConfirmView" Visibility="Collapsed" MaxWidth="410">
            <Rectangle RadiusX="10" RadiusY="10">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black"/>
                </Rectangle.Fill>
            </Rectangle>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"></ColumnDefinition>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="60"></RowDefinition>
                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Name="ErrorTitle" Foreground="White" Content="Confirm Forget" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"/>
                <TextBlock TextWrapping="WrapWithOverflow" Foreground="LightGray" Padding="30" Text="If you delete this identity you will no longer have access to the resources that it grants you." Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans"/>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="CancelConfirmButton" Grid.Column="0" Margin="40,0,20,0" Cursor="Hand" BorderThickness="0" Foreground="#FFFFFF" Background="#0068F9" Content="Close" Click="CancelConfirmButton_Click" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="ConfirmButton" Grid.Column="1" Margin="20,0,40,0" Cursor="Hand" BorderThickness="0" Foreground="#FFFFFF" Background="#F4044D" Content="Confirm" Click="ConfirmButton_Click" FontFamily="pack://application:,,,/Assets/Fonts/#Open Sans">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
